<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/intel2"
    tools:context="my.app.yuval.intel_managment.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/intel2"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Page"
                android:gravity="center"
                android:textColor="#FFFDE7"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="130dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/logout"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:text="Log out" />



        </LinearLayout>

        <View android:background="#ffffff"
            android:layout_width = "match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"/>


        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks number: "
            android:textSize="19dp"
            android:gravity="left"
            android:textColor="#FFFDE7"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/numOfMissionsInDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#FFFDE7"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Work: "
            android:gravity="left"
            android:textColor="#FFFDE7"
            android:textSize="19dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/numOfInWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#FFFDE7"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Late: "
                android:textColor="#FFFDE7"
                android:textSize="19dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/numOfLate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#FFFDE7"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done: "
                android:textColor="#FFFDE7"
                android:textSize="19dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/numOfDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#FFFDE7"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

    </LinearLayout>

        <View android:background="#ffffff"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/addElecButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:textColor="#FFFDE7"
            android:layout_gravity="left"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Add Worker" />


        <Button
            android:id="@+id/viewElectrician"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFDE7"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:layout_marginLeft="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="View workers list" />

        <Button
            android:id="@+id/addMission"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:textColor="#FFFDE7"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:text="Add task" />

        <Button
            android:id="@+id/viewOpenMissions"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFDE7"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:text="View Open tasks" />

        <Button
            android:id="@+id/viewCloseMissions"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFDE7"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:text="View Close tasks" />

        <Button
            android:id="@+id/updatePassWord"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFDE7"
            android:layout_gravity="left"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Change password" />

        <Button
            android:id="@+id/loadWeeks"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFDE7"
            android:layout_gravity="left"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="View chart" />

        <Button
            android:id="@+id/deleteAlarm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFDE7"
            android:layout_gravity="left"
            android:textSize="19dp"
            android:drawableRight="@drawable/button"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Cancel Alarm" />


    </LinearLayout>

</ScrollView>